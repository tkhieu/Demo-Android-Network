<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/buttonVolleyActivity"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/button_demo_volley" />

    <Button
        android:id="@+id/buttonAsyncTaskActivity"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonVolleyActivity"
        android:text="@string/button_demo_async_task" />

    <Button
        android:id="@+id/buttonServiceActivity"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonAsyncTaskActivity"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonAsyncTaskActivity"
        android:text="@string/button_demo_service" />

    <Button
        android:id="@+id/buttonGroundyAcitivity"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonServiceActivity"
        android:layout_alignRight="@+id/buttonServiceActivity"
        android:layout_below="@+id/buttonServiceActivity"
        android:text="Groundy" />

</RelativeLayout>
